{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna exec -- eslint --cache --ext .js,.jsx,.ts,.tsx",
    "typecheck": "lerna exec -- tsc --noEmit",
    "typecheck:changed": "lerna exec --since origin/master --include-dependents -- tsc --noEmit"
  },
  "devDependencies": {
    "lerna": "4.0.0"
  }
}